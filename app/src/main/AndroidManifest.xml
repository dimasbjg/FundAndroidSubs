<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fundandroidsubs">

    <permission
        android:name="com.example.fundandroidsubs.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.fundandroidsubs.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FundAndroidSubs">
        <receiver
            android:name=".reciever.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ui.SettingActivity" />

        <provider
            android:name=".provider.UserProvider"
            android:authorities="com.example.fundandroidsubs"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.fundandroidsubs.READ_DATABASE"
            android:writePermission="com.example.fundandroidsubs.WRITE_DATABASE" />

        <activity
            android:name=".ui.FavoritesListActivity"
            android:noHistory="true"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.DetailUserActivity"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>